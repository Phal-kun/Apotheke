<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>DefaultFilter</filter-name>
        <filter-class>Filter.DefaultFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DefaultFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>CRUDUserList</servlet-name>
        <servlet-class>Controller.User.CRUDUserList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CRUDUserAddStaff</servlet-name>
        <servlet-class>Controller.User.CRUDUserAddStaff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CRUDUserEditStaff</servlet-name>
        <servlet-class>Controller.User.CRUDUserEditStaff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CRUDUserEditCustomer</servlet-name>
        <servlet-class>Controller.User.CRUDUserEditCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.User.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CRUDUserResetPassword</servlet-name>
        <servlet-class>Controller.User.CRUDUserResetPassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CRUDUserList</servlet-name>
        <url-pattern>/CRUDUserList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CRUDUserAddStaff</servlet-name>
        <url-pattern>/CRUDUserAddStaff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CRUDUserEditStaff</servlet-name>
        <url-pattern>/CRUDUserEditStaff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CRUDUserEditCustomer</servlet-name>
        <url-pattern>/CRUDUserEditCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CRUDUserResetPassword</servlet-name>
        <url-pattern>/CRUDUserResetPassword</url-pattern>
    </servlet-mapping>
</web-app>
